<!-- Genre Dropdown -->
<li class="nav-item dropdown">
  <%= link_to "Genre", "#", class: "nav-link dropdown-toggle", id: "genreDropdown", role: "button", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
  <div class="dropdown-menu" aria-labelledby="genreDropdown">
    <% Genre.all.each do |genre| %>
      <%= link_to genre.name, root_path(genre: genre.name), class: "dropdown-item" %>
    <% end %>
  </div>
</li>

<!-- Mood Dropdown -->
