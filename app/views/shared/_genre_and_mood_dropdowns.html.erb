  <div class="dropdown-menu" aria-labelledby="moodDropdown">
    <% MoodTag.all.each do |mood_tag| %>
      <%= link_to mood_tag.name, root_path(mood: mood_tag.name), class: "dropdown-item" %>
    <% end %>
  </div>
</li>
