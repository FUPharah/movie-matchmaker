<h1>Movies Index</h1>

<% @movies.each do |movie| %>
  <div class="movie-card">
    <img src="<%= movie.poster_image_url %>" alt="<%= movie.title %>">
    <div class="content">
      <h3><%= movie.title %></h3>
      <p>Movie Genre: <%= movie.genre.name %></p>
      <p>Release Date: <%= movie.release_date %></p>
      <p>Mood: <%= movie.mood_tag.name %></p>
      <%= link_to "Show", movie_path(movie) %>
    </div>
  </div>
<% end %>

